<!DOCTYPE html>
<html>
  <head>
    <title>VideoGameCommunityHub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  </head>

  <body>
    <div class="container">
      <% if session[:user_id] %>
        <%= link_to "Home", user_path(session[:user_id]) %> |
        <%= link_to "Video Games", video_games_path %> |
        <%= link_to "Tags", tags_path %> |
        <%= link_to "Sign out", session_path(session[:user_id]), method: :delete %>
      <% else %>
        <%= link_to "Home", root_path %> |
        <%= link_to "Sign up", new_user_path %> |
        <%= link_to "Sign in", new_session_path %> |
        <%= link_to "Facebook Sign in", '/auth/facebook' %>
      <% end %>

      <%= flash[:alert] if flash[:alert] %>
      <%= hidden_field_tag "userId", session[:user_id] if session[:user_id]%> 
      <%= yield %>
    </div>
  </body>
</html>
