<h1>Sign in</h1>
<%= render(partial: 'layouts/error_message', locals: {error_message: @error_message}) %>
<%= form_tag sessions_path do %>
  <div>
    <%= label_tag :email, "Email" %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password %>
  </div>
    <%= submit_tag "Sign in" %> <%= link_to "Cancel", :back %>
<% end %>
