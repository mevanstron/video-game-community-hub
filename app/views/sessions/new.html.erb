<h1>Sign in</h1>
<%= render 'layouts/error_message', error_message: @error_message %>
<%= form_tag sessions_path, html: {class: "form form_container"} do %>
  <div class="form-group">
    <%= label_tag :email, "Email" %>
    <%= text_field_tag :email %>
  </div>
  <div class="form-group">
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password %>
  </div>
    <%= submit_tag "Sign in" %> <%= link_to "Cancel", :back %>
<% end %>
