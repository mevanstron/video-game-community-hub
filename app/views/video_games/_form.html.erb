<%= form_for video_game do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title%>
  </div>
  <div>
    <%= f.label :release_year, "Year Released" %>
    <%= f.text_field :release_year%>
  </div>
  <div>
    <%= f.label :console %>
    <%= f.text_field :console%>
  </div>
  <div>
    <%= f.label :tags %>
    <%= f.collection_check_boxes :tag_ids, tags, :id, :name %>
  </div>
  <p>New Tag:</p>
  <%= f.fields_for :tags, video_game.tags.build do |tags_fields| %>
    <div>
      <%= tags_fields.label :name %>
      <%= tags_fields.text_field :name %>
    </div>
  <% end %>

<p>New Tag: partial_to tags/new.html.erb</p>
  <div>
    <%= f.submit "Submit" %> <%= link_to "Cancel", :back %>
  </div>
<% end %>
